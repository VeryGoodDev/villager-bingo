.options-dialog-wrapper
  display grid
  grid-row-gap 1.25em

// Overlay styles
.scrim
  background-color var(--bg-color-15)
  bottom 0
  left 0
  opacity 0.75
  position fixed
  right 0
  top 0

.overlay
  background-color var(--bg-color-25)
  border-radius 8px
  box-shadow 4px 4px 8px 4px var(--bg-color-15)
  color var(--acnh-color-yellow)
  left 50%
  max-height calc(100vh - 2em)
  max-width 350px
  overflow-y auto
  position absolute
  top 50%
  transform translate(-50%, -50%)
  width 100vw

  &-contents
    padding 1em

// Checkbox
.checkbox-wrapper
  align-items center
  display grid
  grid-column-gap 4px
  grid-template-columns auto 1fr

  margin-bottom 1em

  input
    display none

    &:checked ~ label::before
      background-image url('../icons/check.svg')
      background-position center
      background-repeat no-repeat
      background-size 16px

  label
    align-items center
    display grid
    grid-column-gap 4px
    grid-template-columns auto 1fr
    margin 0

    &::before
      --size 12px
      align-content center
      background-color var(--bg-color-15)
      border-radius 4px
      content ''
      display grid
      justify-content center
      height var(--size)
      padding 4px
      transition background-image 1s ease-in-out
      width var(--size)
