[data-reach-combobox-input]
  background-color var(--background-color-35)
  border 1px solid var(--acnh-color-yellow)
  border-radius 6px
  color #ecebea
  font-size 1em
  padding 0.25em 0.375em 0.375em
  width 100%

  &[aria-expanded=true]
    border-bottom-left-radius 0
    border-bottom-right-radius 0

  &::placeholder
    color #ccc
    font-style italic
    letter-spacing 0.5px

  &:focus
    box-shadow 0 0 0 2.5px var(--acnh-color-yellow)
    outline none

// Wrapper around list
[data-reach-combobox-popover]
  border 1px solid var(--acnh-color-yellow)
  background-color var(--background-color-35)
  color #fff

// Inner list element
[data-reach-combobox-list]
  list-style none
  margin 0
  padding 0
  user-select none

// Selectable item in list
[data-reach-combobox-option]
  cursor pointer
  margin 0

  & > div
    padding 0.25em 0.5em

  // TODO: Find right background colors (shades of --acnh-color-yellow)
  &:hover
    background-color var(--acnh-color-yellow)
    color #000
    opacity 0.7

  // &[aria-selected=true]
